<odoo>
    <data>
        <record model="ir.ui.view" id="visitors_view">
            <field name="name">Visitors list</field>
            <field name="model">visitors</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="visitor_company"/>
                    <field name="phone"/>
                    <field name="drink"/>
                    <field name="host"/>
                    <field name="check_in"/>
                    <field name="duration"/>
                    <field name="station"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_visitors_tree">
            <field name="name">Visitors</field>
            <field name="res_model">visitors</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="visitors_view"/>
        </record>

        <!-- Menu Items -->
        <menuitem name="FrontDesk" id="menu_root" sequence="10"/>

        <menuitem name="Stations" id="menu_Stations" action="action_visitors_tree" parent="menu_root" sequence="10"/>
        <menuitem name="Visitors" id="menu_Visitors" action="action_visitors_tree" parent="menu_root" sequence="10"/>
        <menuitem name="Reporting" id="menu_Reporting" action="action_visitors_tree" parent="menu_root" sequence="10"/>
        <menuitem name="Configuration" id="menu_Configuration" action="action_visitors_tree" parent="menu_root" sequence="10"/>

    </data>
</odoo>
