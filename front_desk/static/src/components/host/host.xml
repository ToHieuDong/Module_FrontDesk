<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="front_desk.host">

        <div class="container min-vh-100 d-flex flex-column py-5">
            <div class="row">
                <div class="col-md-12 d-flex">
                    <button type="button" t-on-click="switchToInfo">&lt;- Back</button>
                </div>
            </div>

            <div class="row flex-grow-1 d-flex align-items-center justify-content-center m-5 p-5">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <h1 class="fs-2 fw-bold">Who are you visiting?</h1>
                    </div>
                </div>

                <div class="form-group row d-flex">
                    <input class="p-2" type="text" t-model="state.name" placeholder="Choose a Host?"/>
                </div>
                <button class="btn btn-primary btn-lg" t-on-click="switchToDrink">Check In</button>
            </div>




        </div>



    </t>

</templates>